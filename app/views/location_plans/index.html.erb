<%= render 'header' %>

<% if @schedule.complete? -%>
  <% @location_plans.each do |location_plan| %>
    <div class="panel panel-default">
      <% location = location_plan.location %>

      <div class="panel-body">
        <div class="col-sm-4">
          <div class="row">
            <h3><%= link_to location.name, location_plan_path(location_plan) %></h3>
          </div>
          <div class="row">
            <%= life_cycle_info(location_plan) %>
          </div>
          <div class="row">
            <small><%= location_plan.rooms %> rooms &bull; Max <%= location_plan.max_mds %> MDs</small>
          </div>
        </div>
        <div class="col-sm-8">
          <div class="row">
            <div>
              <%= location_plan.chosen_grade.try(:label) -%>

              <div class="pull-right">
                <%= action_links location_plan %>
                <%= state_label location_plan %>
              </div>
            </div>

          </div>
          <div class="row">
            <div class="col-sm-4">
              <h4><%= hour_points(location_plan) %> Physician hours</h4>
            </div>
            <div class="col-sm-2 text-center">
              <h4><%= patient_sat_points(location_plan) %> <span class=" bg-danger">(A)</span></h4>
              Patient Sat
            </div>
            <div class="col-sm-2 text-center">
              <h4><%= md_sat_points(location_plan) %> <span class=" bg-danger">(B+)</span></h4>
              Physician Sat
            </div>
            <div class="col-sm-2 text-center">
              <h4><%= cost_points(location_plan) %> <span class=" bg-danger">(B)</span></h4>
              Cost Score
            </div>
            <div class="col-sm-2 text-center">
              <h4><%= total_points(location_plan) %> <span class=" bg-danger">(B+)</span></h4>
              Overall
            </div>
          </div>
        </div>
      </div>

    </div>
  <% end %>
<% end -%>

<% if policy(@schedule).edit? -%>
  <%= link_to 'Edit', edit_schedule_path(@schedule) %> |
<% end -%>
<%= link_to 'Back', schedules_path %> |
<% if policy(@schedule).push? -%>
  <%= link_to 'Sync with When I Work', pushes_path(schedule_id: @schedule.to_param) %>
<% end -%>
