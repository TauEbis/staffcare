<%= f.input data_field, label: label, required: true do  %>
	<div class="input-group">
		<span class="input-group-addon">$</span>
		<%= f.input_field data_field, step: 10, value: number_with_precision(f.object.send(data_field.to_sym), precision:0), class: "form-control" %>
		<span class="input-group-addon">.00</span>
	</div>
<% end %>