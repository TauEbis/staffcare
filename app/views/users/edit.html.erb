<div class="authform">
  <h3>Edit <%= @user.name || @user.email %></h3>
  <%= simple_form_for(@user, html: { class: 'form-horizontal' }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :name, :autofocus => true, class: 'form-control' %>

    <%= f.input :email, class: 'form-control' %>

    <%= f.input :role, collection: [['Manager', 'manager'],['GM', 'gm'], ['Admin', 'admin']], include_blank: false, class: 'form-control' %>

    <%= f.association :zones, as: :check_boxes, wrapper: :vertical_radio_and_checkboxes %>

    <%= f.submit 'Update', :class => 'button right' %>
  <% end %>
</div>
