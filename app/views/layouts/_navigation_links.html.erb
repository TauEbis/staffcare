<%# add navigation links to this file %>
<% if user_signed_in? %>
  <% if policy(Schedule).index? -%>
    <li><%= link_to 'Schedules', schedules_path %></li>
  <% end -%>
  <% if current_user.admin? -%>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">Setup <b class="caret"></b></a>
      <ul class="dropdown-menu">
        <li><%= link_to 'Locations', locations_path %></li>
        <li><%= link_to 'Zones', zones_path %></li>
        <li><%= link_to 'Users', users_path %></li>
        <li><%= link_to 'Volume Forecasts', patient_volume_forecasts_path %></li>
        <li><%= link_to 'Heatmaps', heatmaps_path %></li>
      </ul>
    </li>
  <% end -%>
  <li><%= link_to 'Help', pages_path %></li>
  <li><%= link_to current_user.email, profile_user_path(current_user) %></li>
  <li><%= link_to 'Sign out', destroy_user_session_path, :method=>'delete' %></li>
<% else %>
  <li><%= link_to 'Sign in', new_user_session_path %></li>
  <%- if devise_mapping.registerable? %>
    <li><%= link_to 'Sign up', new_user_registration_path %></li>
  <%- end %>
<% end %>
