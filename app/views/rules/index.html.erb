<%provide(:title, "All Rules")%>
<h1>Listing Rules</h1>

<table class="table">
  <thead>
    <tr>
      <th>Position</th>
      <th>Default Rule</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @rules.each do |rule| %>
      <tr>
        <td><%= rule.position.name.titleize %></td>
        <td><%= rule.label %></td>
        <td><%= link_to 'Edit', edit_rule_path(rule) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
