<%= simple_form_for(@patient_volume_forecast, html: { class: 'form-vertical' }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors @patient_volume_forecast %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-sm-4">

        <%= render 'shared/date_picker_field', f: f, date_field: :start_date, picker_type: "weekstartpicker" %>
        <%= render 'shared/date_picker_field', f: f, date_field: :end_date, picker_type: "weekstoppicker" %>

		    <% @locations.each do |l| %>
				    <%= f.label("volume_by_location[#{l.upload_id}]", l.name) %> <br />
				    <%= f.input_field "volume_by_location[#{l.upload_id}]", as: :string, class: 'form-control',
                value: @patient_volume_forecast.volume_by_location[l.upload_id.to_s] %>
            <br />
				<% end %>

      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
</br>
