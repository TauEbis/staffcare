<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Status of others</h3>
  </div>
  <div class="panel-body">

      <% @minions.each do |minion| -%>
          <h4><%= minion[:user].name %> <span class="badge"><%= minion[:todo_count] %></span></h4>
          <ul class="list-group">
            <% minion[:todos].each do |todo| -%>
              <li class="list-group-item"><%= link_to todo.name, todo %>
              <span class="pull-right"><%= deadline_label(minion[:user], todo) %></span>
              </li>
            <% end -%>
          </ul>
      <% end -%>

  </div>
</div>

