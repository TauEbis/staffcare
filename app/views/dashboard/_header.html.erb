<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Active Schedules</h3>
  </div>
  <div class="panel-body">
    <% @schedules.each do |schedule| -%>
      <div class="row">
        <div class="col-sm-5">
          <h3><%= link_to schedule_date_span(schedule), schedule %></h3>
        </div>
        <div class="col-sm-2">
          <p class="text-muted">Managers due:</p>
          <h5><%=l schedule.manager_deadline %></h5>
        </div>
        <div class="col-sm-2">
          <p class="text-muted">RM due:</p>
          <h5><%=l schedule.rm_deadline %></h5>
        </div>
        <div class="col-sm-2">
          <p class="text-muted">When I Work:</p>
          <h5><%=l schedule.sync_deadline %></h5>
        </div>
        <div class="col-sm-1">
          <br>
          <%= link_to "edit dates", request_approvals_schedule_path(schedule, dashboard: true) if current_user.admin? %>
        </div>
      </div>
    <% end -%>
  </div>
</div>



