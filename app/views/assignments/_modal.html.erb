<div class="modal fade" id="showAssignmentModal" data-bind="with: selected_day">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">
          <span data-bind="text: location_plan.name"></span>
          -
          <span data-bind="text: date"></span>
        </h4>
      </div>
      <div class="modal-body">
        <h4>
        </h4>

        <form class="form-horizontal">
          <div data-bind="foreach: shifts">
            <div class="form-group">
              <label data-bind="text: timeLabel" class="col-sm-4 control-label"></label>
              <div class="col-sm-4">

              </div>
            </div>
          </div>
        </form>

        <a data-bind="attr: {href: url}">See optimized schedule and edit shift length</a>

        <hr>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
