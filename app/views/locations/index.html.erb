<%provide(:title, 'All Locations')%>

<%= render 'shared/index_header', name: 'location' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Zone</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.zone %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @locations %>