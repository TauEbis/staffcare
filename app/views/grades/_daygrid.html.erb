<table class="daygrid" data-grade-id="<%= @grade.id %>">
  <thead>
  <tr>
    <th colspan="7" class="text-center"><%= @schedule.starts_on.strftime("%B %Y") %></th>
  </tr>
  <tr>
    <td>Su</td>
    <td>Mo</td>
    <td>Tu</td>
    <td>We</td>
    <td>Th</td>
    <td>Fr</td>
    <td>Sa</td>
  </tr>
  </thead>
  <tbody class="text-center">
  <% schedule_daygrid(@schedule).each do |week| -%>
    <tr>
      <% week.each do |date| -%>
        <td data-date="<%= date.to_s %>" data-grade-score="<%= date ? @grade.pen_per_pat(date.to_s) : '' %>">
          <%= link_to(date.day, '#', data: {date: date.to_s}) if date %>
        </td>
      <% end -%>
    </tr>
  <% end -%>
  </tbody>
</table>
