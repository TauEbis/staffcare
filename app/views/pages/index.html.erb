<%provide(:title, 'All Pages')%>

<%= render 'shared/index_header', name: 'Page', title: 'All Help Topics' %>

<table class="table">
  <thead>
    <tr>
      <th>Help Topic</th>
      <th>Permalink</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= link_to page.name, page %></td>
        <td><%= page_url(page) %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
