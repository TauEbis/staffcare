<%provide(:title, @page.name)%>

<h1><%= @page.name %></h1>

<%= Kramdown::Document.new(@page.body || '', input: 'GFM').to_html.html_safe %>

<div class="panel panel-default">
  <div class="panel-body">
    <% if policy(@page).edit? -%>
      <%= link_to 'Edit', edit_page_path(@page) %> |
      <%= link_to 'List all pages', pages_path(list: true) %> |
    <% end -%>
    <%= link_to 'Back', pages_path %>

    <small class="pull-right">
      Page link: <%= link_to url_for(@page), @page %> |
      Updated: <%= l @page.updated_at %>
    </small>
  </div>
</div>
